<%- include('partials/header') %>
<%- include('partials/nav') %>

<h3>Área do aluno</h3>

<div class="grid">
    <div class="centered-div">
        <p class="centered-text"> 
            <img src="../public/icons/coin.png" style="height: 30px;">
            <strong>Saldo: </strong> <%= studentBalance %> moedas
        </p>
    </div>
</div>

<main class="containter">
    <h3>Benefícios disponíveis</h3>
    <table role="grid">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Empresa parceira</th>
                <th>Preço</th>
                <th>Descrição</th>
                <th>Resgatar</th>
            </tr>
        </thead>
        <tbody>
            <% benefits.forEach(benefit => { %>
                <tr>
                    <td><%= benefit.name %></td>
                    <td><%= benefit.partner_id %></td>
                    <td><%= benefit.description %></td>
                    <td><%= benefit.price %></td>
                    <td>
                        <form action="/benefits/update/<%= benefit.id %>" method="POST">
                            
                            <input type="hidden" name="benefitPrice" value="<%= benefit.price %>">
                            
                            <button type="submit"><img src="../public/icons/send.png" alt="Enviar"></button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</main>

<style>
    .centered-div {
        background-color: #b7dfec;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 60px;
        width: 240px;
        border-radius: 8px;
    }

    .centered-text {
        text-align: center;
        margin: 0;
        color: black;
    }
</style>

<%- include('partials/footer') %>
