<%- include('partials/header') %>

<div class="grid">
    <div style="padding: 1rem;">
        <a href="/home" role="button"><img src="../../public/icons/home.png" style="max-height: 25px;"></a>
    </div>
</div>

<div class="grid">
    <div class="centered-div" style="padding: 20px;">
        <p class="centered-text"> 
            <img src="../public/icons/coin.png" style="height: 30px;">
            <strong>Saldo: </strong> <%= balance %> moedas
        </p>
    </div>
</div>

<main class="container">
    <div style="margin-bottom: 10%">
        <h3>Estudantes</h3>

        <h4>Visualizar estudantes</h4>
        <table role="grid">
            <thead>
                <tr>
                    <th>CPF</th>
                    <th>Nome</th>
                    <th>EndereÃ§o</th>
                    <th>Moedas</th>
                    <th>Enviar Moedas</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student=> { %>
                    <tr>
                        <td>
                            <%= student.cpf %>
                        </td>
                        <td>
                            <%= student.name %>
                        </td>
                        <td>
                            <%= student.address %>
                        </td>
                        <td>
                            <%= student.balance %>
                        </td>
                        <td>
                            <form style="margin: 0; padding: 0; display: flex;" action="/student/update/<%= student.cpf %>" method="POST">
                                <input type="number" name="coins" placeholder="1" required style="flex: 6; margin-right: 5px;">
                                <button type="submit" style="flex: 1; margin-bottom: 0; height: 60px;"><img src="../public/icons/send.png" alt="Enviar"></button>
                            </form>
                        </td>                        
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</main>

<%- include('partials/footer') %>