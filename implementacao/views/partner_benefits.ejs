<%- include('partials/header') %>

<div class="grid">
    <div style="padding: 1rem;">
        <a href="/home" role="button"><img src="../../public/icons/home.png" style="max-height: 25px;"></a>
    </div>
</div>

<main class="container"; style="padding-top: 1rem;">
    <h3>Benefícios oferecidos</h3>
    <table role="grid">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% benefits.forEach(benefit=> { %>
                <tr>
                    <td>
                        <%= benefit.id %>
                    </td>
                    <td>
                        <%= benefit.name %>
                    </td>
                    <td>
                        <%= benefit.price %> moedas
                    </td>
                    <td>
                        <%= benefit.description %>
                    </td>
                    <td>
                        <form action="/benefit/delete/<%= benefit.id %>" method="POST" style="margin-bottom: 0">
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit" style="margin-bottom: 0; width: 100px;"><img
                                    src="/public/icons/bin.png" alt="Excluir"></button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <h4>Adicionar benefício</h4>
    <form action="/benefit/add" method="POST">
        <div class="grid">
            <div>
                <label for="id">
                    ID
                    <input type="text" name="id" placeholder="Ex: '1'" required>
                </label>

                <label for="name">
                    Nome
                    <input type="text" name="name" placeholder="Ex: 'Fones de Ouvido Galaxy Ear Buds'" required>
                </label>
            </div>

            <div>
                <label for="price">
                    Preço (em moedas)
                    <input type="text" name="price" placeholder="Ex: '50'" required>
                </label>
                <label for="description">
                    Descrição
                    <input type="text" name="description" placeholder="Fones de ouvido práticos e compactos. " required>
                </label>
            </div>
        </div>

        <button type="submit">Novo benefício</button>
    </form>

</main>

<%- include('partials/footer') %>