<%- include('partials/header') %>
<%- include('partials/nav') %>

<header style="padding: 1rem;">
    <h1>Parceiros</h1>
</header>

    <main class="container">
        <div style="margin-bottom: 10%">
            <h2>Empresas parceiras</h2>

            <h4>Visualizar empresas</h4>
            <table role="grid">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% partners.forEach(partner => { %>
                        <tr>
                            <td>
                                <%= partner.id %>
                            </td>
                            <td>
                                <%= partner.name %>
                            </td>
                            <td>
                                <form action="/partners/delete/<%= partner.id %>" method="POST">
                                    <input type="hidden" name="_method" value="DELETE" />
                                    <button type="submit"><img src="../public/icons/bin.png" alt="Excluir"></button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>

            <h4>Adicionar empresa</h4>
            <form action="/partners/add" method="POST">
                <div class="grid">
                    <label for="id">
                        ID
                        <input type="text" name="id" placeholder="Ex: '1'" required>
                    </label>
    
                    <label for="name">
                        Nome
                        <input type="text" name="name" placeholder="Ex: 'Empresa Brasileira de Pesquisa Agropecuária'" required>
                    </label>
                </div>
    
                <button type="submit">Nova empresa</button>
            </form>
        </div>

    </main>

    <%- include('partials/footer') %>